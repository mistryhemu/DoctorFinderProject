@model DoctorFinderProject.Models.Appointmenttbl
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "EditAppointment";
    Layout = "~/Areas/User/Views/UserTempLayout.cshtml";
}

<h2>EditAppointment</h2>

<h4>Appointmenttbl</h4>
<hr />
<div class="container" style="margin-top: 50px">
    <div class="col-md-12">
        <div class="col-md-2">
        </div>

        <div class="col-md-4">
            <form asp-action="EditAppointment" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(m => m.AptId)
                <div class="form-group">
                    <label class="control-label">Hospital Name</label>
                    @Html.DropDownListFor(m => m.HospitalId, ViewBag.hospitals as IEnumerable<SelectListItem>, "--- Select Hospital ---", new { @class = "form-control" })

                    <span asp-validation-for="HospitalId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Patient Name</label>
                    @Html.TextBox("txtUserName", (string)@Context.Session.GetString("userName"), new { disabled = "disabled", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="control-label">Doctor Name</label>
                    @*<input asp-for="DoctorId" class="form-control" />*@
                    <select id="drpDoctor" class="form-control"></select>
                    @Html.HiddenFor(m => m.DoctorId)
                    @*<span asp-validation-for="DoctorId" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label class="control-label">Date Time</label>
                    <input asp-for="AptDateTime" class="form-control" />
                    <span asp-validation-for="AptDateTime" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                        <label asp-for="AptStatus" class="control-label"></label>
                        <input asp-for="AptStatus" class="form-control" />
                        <span asp-validation-for="AptStatus" class="text-danger"></span>
                    </div>*@
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ManageAppointment">Back to List</a>
    </div>
    <script type="text/javascript">
        $("#HospitalId").change(function () {
            BindDoctorDropDown($("#HospitalId").val());
        });

        $(document).ready(function () {
            //debugger;
            BindDoctorDropDown($("#HospitalId").val());
        });

        function BindDoctorDropDown(id) {

            if (id != "") {
                $.ajax({
                    url: "/User/Default/GetDoctorByHospitalId",
                    type: "GET",
                    data: { hospitalId: id },
                    dataType: "json",
                    success: function (doctordata) {
                        //debugger;
                        $("#drpDoctor").empty();
                        $("#drpDoctor").append("<option value=''>--- Select Doctor ---</option>");
                        $.each(doctordata, function (key, item) {
                            $("#drpDoctor").append("<option value='" + item.doctorId + "'>" + item.firstName + " " + item.lastName + "</option>");
                        });
                    }
                });
            }

        }
    </script>
    <div class="col-md-2">
        <div class="row"></div>
    </div>
</div>